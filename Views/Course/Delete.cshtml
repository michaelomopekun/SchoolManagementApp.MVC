@{
    ViewData["Title"] = "Delete Course";
}

@model Course

<div class="container mt-5">
    <h2>Delete Course</h2>

    <h3>Are you sure you want to delete this course?</h3>
    <div class="mt-4">
        <h4>Course Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Model.Name</dd>
            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@Model.Description</dd>
            <dt class="col-sm-2">Course Code</dt>
            <dd class="col-sm-10">@Model.Code</dd>
            <dt class="col-sm-2">Credit</dt>
            <dd class="col-sm-10">@Model.Credit</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Code" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="CourseList" asp-controller="Course" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>