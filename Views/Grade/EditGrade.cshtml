@model Grade

@{
    ViewData["Title"] = "Edit Grade";
}

<div class="container mt-4">
    <h2>Edit Grade</h2>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <form asp-action="EditGrade" method="post">
        <input type="hidden" asp-for="GradeId" />
        <input type="hidden" asp-for="CourseId" />
        <input type="hidden" asp-for="userId" />

        <div class="mb-3">
            <label asp-for="Score" class="form-label">Score</label>
            <input asp-for="Score" class="form-control" type="number" min="0" max="100" required />
            <span asp-validation-for="Score" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Comments" class="form-label">Comments</label>
            <textarea asp-for="Comments" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Comments" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-action="ManageGrades" asp-route-courseId="@Model.CourseId" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}