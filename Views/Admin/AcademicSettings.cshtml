@model AcademicSetting
@{
    ViewData["Title"] = "Academic Settings";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="container mt-4">
    <h2>Academic Settings</h2>

    <form asp-action="UpdateAcademicSettings" method="post">
        <div class="card">
            <div class="card-body">
                <div class="mb-3">
                    <label asp-for="CurrentSession" class="form-label"></label>
                    <input asp-for="CurrentSession" class="form-control" />
                    <span asp-validation-for="CurrentSession" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CurrentSemester" class="form-label"></label>
                    <select asp-for="CurrentSemester" asp-items="Html.GetEnumSelectList<Semester>()" class="form-select">
                    </select>
                    <span asp-validation-for="CurrentSemester" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Update Settings</button>

                <div class="mt-3">
                    <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-secondary">Back to Dashboard</a>
                </div>
            </div>
        </div>
    </form>
</div>