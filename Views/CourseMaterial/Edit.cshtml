@model CourseMaterial

<div class="container">
    <h2>Edit Course Material</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        
        <div class="form-group mb-3">
            <label for="title">Title</label>
            <input type="text" class="form-control" id="title" name="title" value="@Model.Title" required>
        </div>

        <div class="form-group mb-3">
            <label for="description">Description</label>
            <textarea class="form-control" id="description" name="description" rows="3">@Model.Description</textarea>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" asp-route-courseId="@Model.CourseId" class="btn btn-secondary">Cancel</a>
    </form>
</div>
